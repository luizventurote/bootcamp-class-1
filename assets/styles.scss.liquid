// Variables
// -----------------------------------------------------------

// Colors
$color-border: #CCCCCC;
$color-black: #000;
$color-black-focus: #444;
$color-white: #FFF;
$color-pink: #ED1E7A;
$color-pink-focus: #C01561;

// Backgrounds
$color-body: {{ settings.color_body_bg }};

// Header
$header-mobile-hight: 56px;
    
// Fonts
// -----------------------------------------------------------    
@font-face {
    font-family: 'DM Serif Display';
    src: url('{{ "DMSerifDisplay-Regular.eot" | asset_url }}');
    src: url('{{ "DMSerifDisplay-Regular.eot?#iefix" | asset_url }}') format('embedded-opentype'),
        url('{{ "DMSerifDisplay-Regular.woff2" | asset_url }}') format('woff2'),
        url('{{ "DMSerifDisplay-Regular.woff" | asset_url }}') format('woff'),
        url('{{ "DMSerifDisplay-Regular.ttf" | asset_url }}') format('truetype'),
        url('{{ "DMSerifDisplay-Regular.svg#DMSerifDisplay-Regular" | asset_url }}') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

body {
    font-size: 16px;
    line-height: 24px;
    color: $color-black;
    background: $color-white;
}

// Headings
// -----------------------------------------------------------   

.h1, .h2, .h3, .h4, .h5, .h6,
h1, h2, h3, h4, h5, h6 {
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}

.h1,
h1 {
    font-size: 32px;
    line-height: 40px;
}

.h2,
h2 {
    font-size: 24px;
    line-height: 32px;
}

.h3,
h3 {
    font-size: 16px;
    line-height: 24px;
}

.h4, .h5, .h6,
h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
}

.h1-seirf,
.h2-seirf,
.h3-seirf,
.h4-seirf,
.h5-seirf,
.h6-seirf {
    font-family: 'DM Serif Display';
    font-weight: normal;
}

.heading-uppercase {
    font-weight: bold;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

.h1.heading-uppercase  {
    font-size: 24px;
    line-height: 32px;
}

.h1.heading-uppercase-large {
    font-size: 32px;
    line-height: 40px;
}

.h2.heading-uppercase {
    font-size: 16px;
    line-height: 24px;
}

.heading-uppercase-small {
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

// Typograph
// -----------------------------------------------------------   

p {
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 16px;
}

.crossed-text {
    font-size: 16px;
    line-height: 24px;
    text-decoration-line: line-through;
    color: $color-border;
}

.mini-text {
    font-size: 12px;
    line-height: 16px;
}

.mini-text-uppercase {
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
}

// Icons
// -----------------------------------------------------------    

.icon {
    width: auto;
    height: 24px;
}

.icon-arrow-right {
    transform: rotate(-90deg);
}

.icon-arrow-left {
    transform: rotate(90deg);
}

// Buttons
// -----------------------------------------------------------   

button,
.btn {
    height: 48px;
    color: $color-white;
    background: $color-black;
    padding: 12px 20px;
    font-size: 14px;
    line-height: 24px;
    text-transform: uppercase;
    font-weight: normal;
    border: 0;
    border-radius: 0;

    &:focus {
        background: $color-black-focus;
        border-radius: 0;
    }
}

.btn-small {
    height: 40px;
    padding-top: 8px;
    padding-bottom: 8px;
}

.btn-large {
    height: 56px;
    padding-top: 16px;
    padding-bottom: 16px;
}

.btn-pink:not([disabled]),
.btn-pink {
    background-color: $color-pink;

    &:hover,
    &:active,
    &:focus {
        background-color: $color-pink-focus;
    }
}

.btn-ghost:not([disabled]),
.btn-ghost {
    background-color: transparent;
    outline: 1px solid $color-white;
    outline-offset: -1px;

    &:hover,
    &:active,
    &:focus {
        background-color: $color-black-focus;
        outline-offset: -4px;
        outline-width: 4px;
    }
}

.btn-ghost-black:not([disabled]),
.btn-ghost-black {
    background-color: transparent;
    outline: 1px solid $color-black;
    outline-offset: -1px;
    color: $color-black;

    &:hover,
    &:active,
    &:focus {
        color: $color-black;
        outline-color: $color-black;
        background-color: transparent;
        outline-offset: -4px;
        outline-width: 4px;
    }
}

// Badge
// -----------------------------------------------------------   

.badge {
    background: $color-pink;
    border-radius: 5px;
    color: $color-white;
    padding: 4px 5px;
    @extend .mini-text-uppercase;
}

// Forms
// -----------------------------------------------------------

label {
    @extend .mini-text-uppercase;
}

select,
input {
    padding: 8px 10px;
    height: 40px;
    border: 0;
    font-size: 16px;
    line-height: 24px;
    color: $color-black;
    outline: 1px solid $color-border;

    &:focus {
        outline-color: $color-black;
    }
}

select {
    padding-right: 40px;
}

// Minicart
// -----------------------------------------------------------

.minicart-trigger {

    .badge {
        line-height: 16px;
        padding: 4px 5px;
        min-width: 25px;
        display: inline-block;
        text-align: center;
    }
}

// Page
// -----------------------------------------------------------

.page-container {
    padding-top: $header-mobile-hight;
}

// Header
// -----------------------------------------------------------

.site-header {
    height: $header-mobile-hight;
    background: $color-body;
    position: fixed;
    width: 100%;
    z-index: 999;
    padding: 8px 20px;
}

.site-header__logo-wrapper {
    width: auto;
}

.site-header__logo {
    margin: 0;
}

.site-header__logo-image {

    img {
        height: 40px;
    }
}

.site-header__icon {
    padding: 0;
    height: 24px;
    width: 24px;

    &.site-header__menu {
        margin-left: 20px;
    }

    &.site-header__cart {
        margin-left: 15px;
    }
}

// Search
// -----------------------------------------------------------

.search-bar {
    height: 56px;
    padding: 16px 20px;

    &:after {
        content: '';
        width: 100%;
        height: 1px;
        background: $color-border;
        position: absolute;
        display: block;
        left: 0;
        right: 0;
        bottom: 0;
    }
}

.search-bar__input {
    padding: 0;
    height: 24px;
    border: 0;
    outline: 0;
}

.search-bar__submit {
    right: auto;
    left: 0;
    padding: 0;
    width: 24px;
    height: 24px;

    &:hover,
    &:focus {
        background: transparent;
    }
}

.search-form__input-wrapper {
    padding-left: 44px;
}

.search-bar__close {
    padding: 0;    
    width: 24px;
    height: 24px;
    text-align: center;
}

// Footer
// -----------------------------------------------------------

.site-footer {
    padding: 48px 60px 16px;

    .page-width {
        padding: 0;
    }
}

.site-footer__item-inner--logo_img {
    width: 100%;
    margin-bottom: 24px;
}

.site-footer__logo {
    display: block;
    margin: auto;

    img {
        display: block;
        width: auto;
        height: 48px;
        margin: auto;
    }
}

.site-footer__rte {
    margin-bottom: 56px;
    text-align: center;
}

.site-footer__item-inner--link_list {
    margin-bottom: 56px;
    width: 100%;
    font-size: 20px;
    line-height: 24px;
    text-transform: uppercase;

    ul {
        margin: 0;

        &.active {
            display: block; 
        }
    }

    li {
        margin: 0;
        padding-bottom: 32px;
    }

    a {
        display: block;
        width: 100%;
    }

    .level-2 {
        font-size: 16px;
        line-height: 40px;
        padding-left: 25px;
        display: none;

        li {
            padding: 8px 0 0;

            &:last-child {
                padding-bottom: 0;
            }
        }
    }

    .level-3 {
        padding-left: 25px;
        display: none;
    }
}

.site-footer__icon-list {
    margin-bottom: 40px;
}

.site-footer__copyright-content {
    display: block;
}

// Hero banner
.image-banner {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    position: relative;
    text-align: center;

    &.overlay-top {
        align-items: flex-start;
    }

    &.overlay-top-left {
        align-items: flex-start;
        justify-content: flex-start;
        text-align: left;
    }

    &.overlay-top-right {
        align-items: flex-start;
        justify-content: flex-end;
        text-align: right;
    }

    &.overlay-center-left {
        justify-content: flex-start;
        text-align: left;
    }

    &.overlay-center-right {
        justify-content: flex-end;
        text-align: right;
    }

    &.overlay-bottom {
        align-items: flex-end;
    }

    &.overlay-bottom-left {
        align-items: flex-end;
        justify-content: flex-start;
        text-align: left;
    }

    &.overlay-bottom-right {
        align-items: flex-end;
        justify-content: flex-end;
        text-align: right;
    }

    img {
        width: 100%;
    }

    .overlay {
        position: absolute;
        padding: 56px 20px;

        .rte-setting {
            margin-bottom: 16px;
        }
    }
}

// Price
// -----------------------------------------------------------

.price {
    align-items: center;

    dd {
        width: 100%;
    }
}

.price-item--sale {
    color: $color-black;
}

.price--on-sale .price__sale {
    justify-content: center;
}

.price--on-sale .price-item--regular {
    color: $color-border;
}


// Product Grid
// -----------------------------------------------------------

.grid-view-item__image-wrapper {
    margin: 0 auto 8px;
    max-width: 100% !important;
}

.grid-view-item__image {
    max-width: 100% !important;
    max-height: none !important;
}

// Product Card
// -----------------------------------------------------------

.product-card {
    text-align: center;
}

// Collection
// -----------------------------------------------------------

.collection-hero__title-wrapper {

    h1 {
        margin-bottom: 24px;
    }
}

.collection-description {
    text-align: center;
}

.filters-toolbar__item {

    &.filters-toolbar__item--count {
        display: none;
    }
}

// Pagination
// -----------------------------------------------------------

.pagination__text {

    .current-item {
        position: relative;

        &:before {
            content: '';
            display: block;
            width: 100%;
            height: 1px;
            background: $color-black;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }
    }
}

// Menu
// -----------------------------------------------------------

.menu-open {
    overflow: hidden;
}

.mobile-nav-wrapper:not(.mobile-nav-slide) {

    .mobile-nav--close,
    .mobile-nav--open {
        display: none;
    }
}

.mobile-nav-slide {

    &.js-menu--is-open {

        &:before {
            content: '';
            display: block;
            width: 100vw;
            height: 100%;
            position: fixed;
            z-index: 90;
            background: $color-black;
            top: 0;
            right: 300px;
            bottom: 0;
            opacity: 0.5;
        }
    }
    
    &.mobile-nav-wrapper {
        width: 300px;
        background: red;
        right: 0;
        left: auto;
        position: fixed;
        z-index: 100;
        height: 100% !important;
        -ms-transform: translateY(0) translateX(100%);
        -webkit-transform: translateY(0) translateX(100%);
        transform: translateY(0) translateX(100%);
        padding: 0;
        overflow: visible;
    }

    .mobile-nav-slide-wrapper {
        background: green;
        overflow: auto;
        height: 100%;
        padding: 16px 20px;
    }

    .js-mobile-nav-toggle {
        background: red;
        padding: 0;
        height: 24px;
        margin: 0 0 0 auto;
        display: block;
    }

    .mobile-nav {
        padding-bottom: 16px;
    }

    .mobile-nav__link, 
    .mobile-nav__sublist-link {
        padding: 0;
    }
    
    &.third-nav--is-open .mobile-nav,
    &.sub-nav--is-open .mobile-nav {
        -ms-transform: translate3d(0, 0, 0);
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    }

    .mobile-nav__dropdown {
        right: 0;
        position: relative;
        z-index: 0;
    }

    .mobile-nav__table {
        display: block;
        background: yellow;
    }

    .mobile-nav__table-cell {
        display: block;
        width: 100%;
    }

    .mobile-nav__return {
        border: 0;
    }

    .mobile-nav__return-btn {
        background: red !important;
        width: 100%;
        padding: 0;
    }
}

// Product page
// -----------------------------------------------------------

.product-single__title {
    text-align: center;
    margin-bottom: 8px;
}

.product-single__meta {

    .product__price {
        margin-bottom: 32px;
    }

    .price__pricing-group {
        flex-wrap: wrap;

        dd {
            width: auto;
        }

        .price__badges {
            display: none;
            margin: auto;
            width: 16px auto 0;
        }
    }

    .price--on-sale {

        .price__sale {
            flex-wrap: nowrap;
            width: 100%;
        }

        .price-item {
            margin: 0 5px;
        }
    }
}

.product-form {

}

.product-form__controls-group {
    margin: 32px auto;
    max-width: 250px;

    &:last-child {
        margin-bottom: 24px;
    }

    .selector-wrapper {
        margin-bottom: 24px;

        &:last-child {
            margin-bottom: 0;
        }
    }
}

.product-form__controls-group ~ .product-form__controls-group--submit {
    margin-top: 32px;
}

.shopify-payment-button__button--hidden {
    height: 0;
    padding: 0;
    margin: 0 !important;
}

.product-single__description {
    text-align: center;
}